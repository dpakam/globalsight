<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.globalsight.cxe.entity.filterconfiguration.XMLRuleFilter"
		table="xml_rule_filter">
		<id name="id" column="ID" type="long">
			<generator class="native" />
		</id>
		<property name="companyId" column="COMPANY_ID" type="long"
			not-null="true" unique="false" />
		<property name="filterName" length="255" column="FILTER_NAME"
			type="string" not-null="true" unique="false" />
		<property name="filterDescription" length="4000"
			column="FILTER_DESCRIPTION" type="string" not-null="false" unique="false" />
		<property name="xmlRuleId" column="XML_RULE_ID" type="long"
			not-null="true" unique="false" />
		<property name="convertHtmlEntity" column="ENABLE_CONVERT_HTML_ENTITY" type="yes_no"
			not-null="true" unique="false" />
        <property name="secondFilterId" column="SECOND_FILTER_ID"
            type="long" not-null="false" unique="false" />
        <property name="secondFilterTableName" length="45" column="SECOND_FILTER_TABLE_NAME" type="string"
            not-null="false" />
		<property name="useXmlRule" column="USE_XML_RULE" type="yes_no"
			not-null="true" unique="false" />
		<property name="configXml" column="CONFIG_XML" type="string"
			not-null="true" unique="false" />
	</class>
</hibernate-mapping>