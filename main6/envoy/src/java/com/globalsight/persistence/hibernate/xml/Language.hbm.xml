<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.globalsight.everest.foundation.LanguageCode"
        table="LANGUAGE">
        <id name="ISO_LANG_CODE" column="ISO_LANG_CODE" type="string">
        </id>
    </class>
    <query name="queryLanguage">
		FROM LanguageCode language WHERE language.ISO_LANG_CODE =:code
	</query>
</hibernate-mapping>
